@model Pokedex3.Models.Pokemon
@{
    ViewBag.Title = $"{Model.Name.English}";
}

<table class="table">
    <tr>
        <th>Image</th>
        <td><img src="~/Images/@(Model.Id).png" /></td>
    </tr>
    <tr>
        <th scope="row">Name</th>
        <td>@Model.Name.English</td>
    </tr>
    <tr>
        <th scope="row">Types</th>
        <td>
            <ul>
                @foreach (var type in Model.Type)
                {
                    <li>@type</li>
                }
            </ul>
        </td>
    </tr>
    <tr>
        <th scope="row">Hp</th>
        <td>@Model.Base.Hp</td>
    </tr>
    <tr>
        <th scope="row">Attack</th>
        <td>@Model.Base.Attack</td>
    </tr>
    <tr>
        <th scope="row">Defence</th>
        <td>@Model.Base.Defense</td>
    </tr>
    <tr>
        <th scope="row">Sp. Attack</th>
        <td>@Model.Base.SpAttack</td>
    </tr>
    <tr>
        <th scope="row">Sp. Defence</th>
        <td>@Model.Base.SpDefense</td>
    </tr>
</table>